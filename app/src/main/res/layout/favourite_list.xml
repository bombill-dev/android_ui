<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVendorProduct"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="11dp"
            app:cardElevation="0dp">
        <ImageView
            android:id="@+id/fish_image"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/bombill"/>
        <TextView
            android:id="@+id/vendor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vendorid"/>
        <TextView
            android:id="@+id/vendor_category"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vendorcategory"/>
        <TextView
            android:id="@+id/fish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fish Name"
            android:layout_marginTop="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="162sp"/>


        <TextView
            android:id="@+id/fish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Price"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="212sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Price"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="162sp"/>



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Unit"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="162sp"/>

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Unit"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="212sp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Description"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="162sp"/>

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Description"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="249sp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>