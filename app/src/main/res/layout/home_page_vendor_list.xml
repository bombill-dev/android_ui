<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:id="@+id/card_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVendorProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="11dp"
                android:layout_marginLeft="11sp"
                android:layout_marginRight="11sp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blue2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/vendor_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rounded_textview_cart"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bombill" />

                    <TextView
                        android:id="@+id/vendor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendor id"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/vendor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="125sp"
                        android:layout_marginTop="4dp"
                        android:text="Vendor Name"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="108dp"
                        android:layout_marginLeft="125sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="21dp"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="0.5" />
<?ignore
                    <TextView
                        android:id="@+id/mlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="125sp"
                        android:layout_marginTop="23dp"
                        android:text="Thane"
                        android:textSize="12dp"/>
    ?>

                    <TextView
                        android:id="@+id/min_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="125sp"
                        android:layout_marginTop="40dp"
                        android:textSize="12dp"
                        android:text="minumum order" />

                    <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text="Distance from you"
                        android:textStyle="bold" />-->
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_below="@+id/ratingBar"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/ic_delivery_bike"
                        android:layout_marginEnd="71dp"
                        android:text="Distance" />

                    <TextView
                        android:id="@+id/Distance_from_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingBar"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="21dp"
                        android:text="Distance"
                        android:textSize="12dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="-41dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="252sp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <TextView
                        android:id="@+id/delivery_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="10km"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>