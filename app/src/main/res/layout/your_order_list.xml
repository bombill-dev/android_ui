<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp">


        <TextView
            android:id="@+id/resto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Restrorant Name"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Order Status"
            android:textSize="12dp" />

        <Button
            android:id="@+id/order_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Track order"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/vendor_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:text="Order ID"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:text="Order Date"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="49dp"
            android:text="Payment Method"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/transaction_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="5dp"
            android:text="Transaction Id"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvGrandTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:text="Grand Total" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:background="#000000" />


        <?ignore
            <TextViewandroid:id="@+id/payment_status"android:layout_width="wrap_content"android:layout_height="wrap_content"android:layout_marginLeft="200sp"android:layout_marginTop="-21sp"android:text="Payment Status"android:textSize="15dp"android:textStyle="bold" />
            ?>


    </androidx.cardview.widget.CardView>
</LinearLayout>